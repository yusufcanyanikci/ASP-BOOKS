@model books.Models.AdminViewModels.ContactVM

@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_ContactLayout.cshtml";
}



  <h1 class="my-4" style="margin-left: 5px;">İletişim Formu</h1>
<div class="card" style="background-color: rgb(0, 0, 0); border-radius: 20px 20px; margin-bottom:80px;  ">
    <div class="card-body row">
        <div class="col-5 text-center d-flex align-items-center justify-content-center">
            <div class="" style="color:white;">
                <h2 style="margin-bottom: 30px;"><strong>Books İletişim </strong> </h2>
                     <h4><strong>Yusuf Can Yanıkcı</strong></h4>
                     <h4><strong>+90 00000000</strong></h4>
                </p>
            </div>
        </div>
        <div class="col-7" style="color: white;">
            <form method="post" autocomplete="off">
                @Html.AntiForgeryToken()
                <div class="form-group my-2" style="margin-right: 60px;">
                    <label><strong>İsim</strong></label>
                    <input asp-for="Isim" type="text" class="form-control" />

                    <span asp-validation-for="Isim" class="text-danger"></span>
                </div>
                <div class="form-group my-2" style="margin-right: 60px;">
                    <label><strong>E-Posta</strong></label>
                    <input asp-for="Eposta" type="email" class="form-control" />

                    <span asp-validation-for="Eposta" class="text-danger"></span>
                </div>
                <div class="form-group my-2" style="margin-right: 60px;">
                    <label><strong>Konu</strong></label>
                    <input asp-for="Konu" type="text" class="form-control" />

                    <span asp-validation-for="Konu" class="text-danger"></span>
                </div>
                <div class="form-group my-2"style="margin-right: 60px;" >
                    <label><strong>Mesaj</strong></label>
                    <textarea asp-for="Mesaj" type="text" class="form-control" rows="4"></textarea>

                    <span asp-validation-for="Mesaj" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <button type="submit" class="btn btn-light" style="margin-top: 15px;">Gönder</button>
                  
                </div>
            </form>
        </div>
    </div>
</div>