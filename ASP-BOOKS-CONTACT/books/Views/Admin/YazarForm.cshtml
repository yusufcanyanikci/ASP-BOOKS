@model books.Models.AdminViewModels.YazarlarVM

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewBag.PageTitle</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Yazarlar">Yazalar</a></li>
                    <li class="breadcrumb-item active">@ViewBag.PageTitle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">

            <!-- /.col-md-6 -->
            <div class="col-lg-6">

                <div class="card card-info">
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Yazar Adı</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Adi" class="form-control" placeholder="Yazar Adı">
                                </div>
                                <span asp-validation-for="Adi" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Soyadı</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Soyadi" class="form-control" placeholder="Soyadı">
                                </div>
                                <span asp-validation-for="Soyadi" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Doğum Tarihi</label>
                                <div class="col-sm-10">
                                    <input type="date" asp-for="DogumTarihi" class="form-control"
                                        placeholder="Doğum Tarihi">
                                </div>
                                <span asp-validation-for="DogumTarihi" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Doğum Yeri</label>
                                <div class="col-sm-10">
                                    <select asp-for="DogumYeri" class="form-control" placeholder="Doğum Yeri">
                                        <option>Türkiye</option>
                                        <option>İngiltere</option>
                                        <option>ABD</option>
                                        <option>Almanya</option>
                                        <option>Fransa</option>
                                        <option>İspanya</option>
                                        <option>İtalya</option>
                                    </select>
                                </div>
                                <span asp-validation-for="DogumYeri" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Cinsiyeti</label>
                                <div class="col-sm-10">
                                    <select asp-for="Cinsiyeti" class="form-control" placeholder="Cinsiyeti">
                                        <option value="true">Erkek</option>
                                        <option value="false">Kadın</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Cinsiyeti" class="text-danger"></span>
                            </div>

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <a href="/Admin/Yazarlar" type="submit" class="btn btn-default">Vazgeç</a>
                            <button type="submit"
                                class="btn @ViewBag.ButtonRenk float-right">@ViewBag.ButtonText</button>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>